#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../less@4.1.3/node_modules/less/bin/lessc" "$@"
else
  exec node  "$basedir/../../../../../less@4.1.3/node_modules/less/bin/lessc" "$@"
fi
