{
  "name": "useless",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:handa-wuxi/workbench.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "commit": "git add . && git-cz",
    "build:packages": "pnpm run clean && pnpm run gen-version && rollup -c",
    "clean": "rimraf site lib es dist node_modules",
    "gen-version": "node scripts/gen-version",
    "release": "release-it",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-angular": "^17.3.0",
    "@types/node": "^18.11.15",
    "@vitejs/plugin-vue": "^4.0.0",
    "commitizen": "^4.2.6",
    "commitlint": "^17.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "deepmerge": "^4.2.2",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "less": "^4.1.3",
    "lint-staged": "^13.1.0",
    "release-it": "^15.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4",
    "vite": "^4.0.1",
    "vue": "^3.2.45"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,tsx,jsx,md}": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "hooks": {
      "after:bump": "npm run changelog",
      "before:release": "echo 🚨 提醒：现在将 Github 中的默认分支更新为这个发布分支！",
      "after:release": "echo 🎊 成功发布 ${name} v${version} 到 ${ repo.repository}。"
    },
    "git": {
      "requireCleanWorkingDir": false,
      "requireBranch": "main",
      "tagName": "v${version}",
      "commitMessage": "🔖 chore(release): v${version}",
      "tagAnnotation": "v${version}",
      "changelog": "npm run changelog"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "tokenRef": "${GITHUB_TOKEN}"
    }
  }
}
